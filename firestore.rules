rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  	match /messages/{messageId} {
    	allow create: if request.auth.uid;
      allow write: if request.auth.uid == resource.data.senderId;
      allow read: if true;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}